        <Setter Property="Height" Value="40" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Background" Value="{StaticResource StackPanelColor}" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="Canvas.Left" Value="{Binding RelativeSource={RelativeSource Self}, Path=CanvasLeft}" />
        <Setter Property="Canvas.Top" Value="{Binding RelativeSource={RelativeSource Self}, Path=CanvasTop}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:ImageEditBar}">
                    <Border
                        CornerRadius="6"
                        BorderBrush="{StaticResource StackPanelColor}"
                        Background="{TemplateBinding Background}">
                        <UniformGrid
                            Columns="11"
                            Rows="1"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                            <control:ToolButton Style="{StaticResource RectangleToolButton}" />
                            <control:ToolButton Style="{StaticResource EllipseToolButton}" />
                            <control:ToolButton Style="{StaticResource ArrowToolButton}" />
                            <control:ToolButton Style="{StaticResource PenToolButton}" />
                            <control:ToolButton Style="{StaticResource TextToolButton}" />
                            <control:ToolButton Style="{StaticResource RevokeButton}" />
                            <control:ToolButton Style="{StaticResource SaveButton}" />
                            <control:ToolButton Style="{StaticResource LightOffButton}" GroupName="Light" />
                            <control:ToolButton Style="{StaticResource MaxMinButton}" GroupName="Max" />
                            <control:ToolButton Style="{StaticResource CancelButton}" />
                            <control:ToolButton Style="{StaticResource OKButton}" />
                        </UniformGrid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

